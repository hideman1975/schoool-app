{% extends 'base.html.twig' %}

{% block title %}Event index{% endblock %}

{% block body %}
    <h1>Список новостей</h1>

    <table class="table">
        <thead>
            <tr>
                <th>№</th>
                <th>Заголовок</th>
                <th>Содержание</th>
                <th>Картинка</th>
                <th>Макет</th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody>
        {% for event in events %}
            <tr>
                <td>{{ event.id }}</td>
                <td>{{ event.title }}</td>
                <td>{{ event.content }}</td>
                <td>{{ event.image }}</td>
                 {% if event.image is not empty %}
                 <td><img src="{{ asset('uploads/' ~ event.image) }}" alt="image" style="width: 70px;"></td>
                {% endif %}

                <td>
                    <a href="{{ path('app_event_show', {'id': event.id}) }}">показать</a>
                    <a href="{{ path('app_event_edit', {'id': event.id}) }}">изменить</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_event_new') }}">Создать</a>
{% endblock %}
